---
import DashboardLayout from "@/layouts/DashboardLayout.astro";
const user = Astro.locals.user;
const profile = Astro.locals.profile;

const isReset = Astro.url.searchParams.get("reset") === "true";
---

<DashboardLayout title="Impostazioni">
  <h1 class="mb-6 text-2xl font-bold">Impostazioni</h1>

  {isReset && (
    <div class="mb-4 rounded-lg bg-yellow-50 p-3 text-sm text-yellow-700">
      Imposta la tua nuova password qui sotto.
    </div>
  )}

  <div class="max-w-lg space-y-6">
    {/* Profile info */}
    <div class="rounded-lg border border-gray-200 bg-white p-6">
      <h2 class="mb-4 text-sm font-bold uppercase tracking-wide text-gray-500">Profilo</h2>
      <div class="space-y-3">
        <div>
          <label class="mb-1 block text-xs font-medium text-gray-500">Email</label>
          <div class="text-sm text-gray-900">{user.email}</div>
        </div>
        <div>
          <label class="mb-1 block text-xs font-medium text-gray-500">Nome</label>
          <div class="text-sm text-gray-900">{profile?.full_name ?? "Non impostato"}</div>
        </div>
        <div>
          <label class="mb-1 block text-xs font-medium text-gray-500">Ruolo</label>
          <div class="text-sm text-gray-900">
            {profile?.role === "admin" ? "Amministratore" : "Analista"}
          </div>
        </div>
      </div>
    </div>

    {/* Password change */}
    <div class="rounded-lg border border-gray-200 bg-white p-6">
      <h2 class="mb-4 text-sm font-bold uppercase tracking-wide text-gray-500">Cambia Password</h2>
      <form id="password-form" class="space-y-3">
        <div>
          <label for="new-password" class="mb-1 block text-xs font-medium text-gray-500">
            Nuova Password
          </label>
          <input
            id="new-password"
            type="password"
            required
            minlength="6"
            class="w-full rounded-lg border border-gray-300 px-3 py-2 text-sm focus:border-blue-500 focus:outline-none focus:ring-1 focus:ring-blue-500"
          />
        </div>
        <button
          type="submit"
          class="rounded-lg bg-blue-600 px-4 py-2 text-sm font-medium text-white hover:bg-blue-700 disabled:opacity-50"
        >
          Aggiorna Password
        </button>
        <div id="password-message" class="hidden rounded-lg p-3 text-sm"></div>
      </form>
    </div>

    {/* Logout */}
    <button
      id="logout-btn"
      class="rounded-lg border border-red-200 px-4 py-2 text-sm font-medium text-red-600 hover:bg-red-50"
    >
      Esci
    </button>
  </div>
</DashboardLayout>

<script>
  import { createSupabaseBrowser } from "@/lib/supabase";

  const supabase = createSupabaseBrowser();

  // Password form
  const form = document.getElementById("password-form") as HTMLFormElement;
  const msgDiv = document.getElementById("password-message") as HTMLDivElement;

  form?.addEventListener("submit", async (e) => {
    e.preventDefault();
    const password = (document.getElementById("new-password") as HTMLInputElement).value;
    const btn = form.querySelector("button") as HTMLButtonElement;
    btn.disabled = true;

    const { error } = await supabase.auth.updateUser({ password });

    msgDiv.classList.remove("hidden", "bg-red-50", "text-red-700", "bg-green-50", "text-green-700");
    if (error) {
      msgDiv.classList.add("bg-red-50", "text-red-700");
      msgDiv.textContent = "Errore nell'aggiornamento.";
    } else {
      msgDiv.classList.add("bg-green-50", "text-green-700");
      msgDiv.textContent = "Password aggiornata!";
    }
    btn.disabled = false;
  });

  // Logout
  document.getElementById("logout-btn")?.addEventListener("click", async () => {
    await supabase.auth.signOut();
    window.location.href = "/auth/login";
  });
</script>
